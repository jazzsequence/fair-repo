{
    "name": "jazzsequence/fair-repo",
    "description": "jazzsequence FAIR repo",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Reynolds",
            "email": "chris@jazzsequence.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.jazzsequence.com"
        }
    ],
    "extra": {
        "installer-paths": {
            "wp-content/mu-plugins/{$name}/": [
                "type:wordpress-muplugin",
                "fairpm/fair-plugin",
                "fairpm/fair-beacon"
            ],
            "wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
            "wp-content/themes/{$name}/": ["type:wordpress-theme"]
        }
    },    
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "afragen/git-updater": "*",
        "composer/installers": "*",
        "fairpm/fair-beacon": "dev-main",
        "fairpm/fair-plugin": "*"
    },
    "scripts": {
        "post-install-cmd": [
            "composer install --no-dev --prefer-dist --working-dir=./wp-content/mu-plugins/fair-beacon",
            "rm -rf wp-content/mu-plugins/fair-beacon/.git",
            "cp wp-content/plugins/git-updater/mu/mu-loader.php wp-content/mu-plugins/git-updater.php"
        ],
        "post-update-cmd": [
            "composer install --no-dev --prefer-dist --working-dir=./wp-content/mu-plugins/fair-beacon",
            "rm -rf wp-content/mu-plugins/fair-beacon/.git",
            "cp wp-content/plugins/git-updater/mu/mu-loader.php wp-content/mu-plugins/git-updater.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "process-timeout": 0,
        "sort-packages": true,        
        "allow-plugins": {
            "composer/installers": true,
            "oomphinc/composer-installers-extender": true
        }
    }
}
